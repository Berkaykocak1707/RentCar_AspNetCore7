@model RentCar_AspNetCore7.Controllers.HomeController.IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section blockscover {
    <div class="ftco-blocks-cover-1">
        <div class="ftco-cover-1 overlay" style="background-image: url('@Url.Content("~/images/hero_1.jpg")')">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-5">
                        <div class="feature-car-rent-box-1">
                            <h3>@Model.Cars.First().Name</h3>
                            <ul class="list-unstyled">
                                <li>
                                    <span>Doors</span>
                                    <span class="spec">@Model.Cars.First().Doors</span>
                                </li>
                                <li>
                                    <span>Seats</span>
                                    <span class="spec">@Model.Cars.First().Seats</span>
                                </li>
                                <li>
                                    <span>City</span>
                                    <span class="spec">@Model.Cars.First().City.Name</span>
                                </li>
                                <li>
                                    <span>Transmission</span>
                                    <span class="spec">@Model.Cars.First().Transmission</span>
                                </li>
                                <li>
                                    <span>Year</span>
                                    <span class="spec">@Model.Cars.First().Year</span>
                                </li>
                            </ul>
                            <div class="d-flex align-items-center bg-light p-3">
                                <span>@Model.Cars.First().PricePerDay$/day</span>
                                <a asp-controller="Home" asp-action="Rent" class="ml-auto btn btn-primary">Rent Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Content -->
<div class="site-section pt-0 pb-0 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form asp-controller="Home" asp-action="Index" method="post" class="trip-form">
                    <div class="row align-items-center mb-4">
                        <div class="col-md-6">
                            <h3 class="m-0">Begin your trip here</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label for="city">City</label>
                            <select id="city" name="city" class="form-control">
                                <option value="all">All Cities</option>
                                @foreach (var city in Model.Cities)
                                {
                                    <option value="@city.Id">@city.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="journey_date">Journey date</label>
                            <input type="date" id="journey_date" name="journeyDate" value="@Model.Today.ToString("yyyy-MM-dd")" class="form-control px-3">
                        </div>
                        <div class="form-group col-md-3" style="margin-top: 4%">
                            <input type="submit" value="Submit" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Our Offer Section -->
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h3>Our Offer</h3>
