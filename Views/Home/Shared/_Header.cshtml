<header class="site-navbar site-navbar-target" role="banner">
    <div class="container">
        <div class="row align-items-center position-relative">
            <div class="col-3">
                <div class="site-logo">
                    <a asp-controller="Home" asp-action="Index">CarRent</a>
                </div>
            </div>

            <div class="col-9 text-right">
                <span class="d-inline-block d-lg-none">
                    <a href="#" class="text-white site-menu-toggle js-menu-toggle py-5 text-white">
                        <span class="icon-menu h3 text-white"></span>
                    </a>
                </span>

                <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                    <ul class="site-menu main-menu js-clone-nav ml-auto">
                        <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Services" ? "active" : "")">
                            <a asp-controller="Home" asp-action="Services" class="nav-link">Services</a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Cars" ? "active" : "")">
                            <a asp-controller="Home" asp-action="Cars" class="nav-link">Cars</a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")">
                            <a asp-controller="Home" asp-action="About" class="nav-link">About</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
